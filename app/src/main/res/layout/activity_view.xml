<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mlljet002.alphabetbook.ViewActivity">


    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"  android:onClick="button_click"/>-->
    <!---->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        >
        <Button android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/A"
        android:id="@+id/first"
        android:layout_gravity="center" android:onClick="click"/>
        <Button android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/prev"
            android:id="@+id/previous"
            android:layout_gravity="center" android:onClick="click"/>
        <Button android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            android:id="@+id/overview"
            android:layout_gravity="center" android:onClick="click"/>

        <Button android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/next"
            android:layout_gravity="center" android:onClick="click"/>

        <Button android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/Z"
            android:id="@+id/last"
            android:layout_gravity="center" android:onClick="click"/>

    </LinearLayout>
</LinearLayout>
